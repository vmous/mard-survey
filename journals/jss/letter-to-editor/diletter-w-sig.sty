	\thispagestyle{empty}
    	\uoalogo
	\vspace*{-60pt}
	\epsfig{file=di-athina.ps,width=0.95in} \\
	\vspace*{6pt}
    \parbox[t]{2.50in}{
	\raggedright
	\diTenPt 
	\scshape
        \ifx\dinull\didept \else \didept \\  \fi
	\smallskip
	University of Athens \\
	\smallskip
	\ifx\idNull\diblgs \else \diblgs \fi  Univ. Campus \\
	\smallskip
	GR15703, Ilisia, Athens \\	
	\smallskip
	\ifx\dinull\dicountry \else \dicountry \fi
    	}
    \hfill
    \parbox[t]{2.50in}{
	\raggedleft
	\diTenPt 
	\scshape
        \ifx\dinull\dititle \diname  \smallskip \\ 
		\else \dititle~\diname \smallskip \\%
		\fi
        \ifx\dinull\dirank 
		\else { \dirank}\\% 
		\fi
        \ifx\dinull\diemail 
		\else  e-mail: {\normalfont\textrm \diemail}\\%
		\fi
	\ifx\dinull\diweb 
		\else web: {\normalfont\textrm \diweb }\\% 
		\fi
        \ifx\dinull\difone 	
		\else  \smallskip Phone: {\normalfont\textrm  \difone}\\%
		\fi
        \ifx\dinull\difax 
		\else Fax: {\normalfont\textrm \difax}\\% 
		\fi
